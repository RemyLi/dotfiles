# xrandr => eDP1, HDMI1, DP1, HDMI2, VIRTUAL1
set $monitorLaptop eDP1
set $monitorVertical HDMI1

workspace 1 output $monitorLaptop
workspace 2 output $monitorVertical

# Déplace un workspace courant entier sur l'autre écran. (l'écran suivant)
bindsym $mod+m move workspace to output right



bindsym $mod+n exec xrandr --output $monitorVertical --auto --left-off eDP1
bindsym $mod+Shift+n exec xrandr --output $monitorVertical --off


