# https://faq.i3wm.org/question/3747/enabling-multimedia-keys.1.html

# Pulse Audio controls
set $changeVolume pactl set-sink-volume @DEFAULT_SINK@

bindsym XF86AudioRaiseVolume exec --no-startup-id $changeVolume +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id $changeVolume -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id $changeVolume toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec ~/bin/toggletouchpad.sh # toggle touchpad
bindsym XF86AudioPlay exec ~/bin/toggletouchpad.sh

# Media player controls
#bindsym XF86AudioPlay exec playerctl play-pause # Sacrifié pour le touchpadcontrole
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

############################################################
# Reload, restart, Sleep, Exit

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m ' ' -b 'Yes, exit i3' 'i3-msg exit'"

#set $Locker i3lock -d -c 000000 && sleep 1
set $Locker i3lock -d -c 000000 -i ~/Images/wallpapers/i3wm.png

bindsym $mod+Shift+x exec --no-startup-id $Locker
bindsym Scroll_Lock exec --no-startup-id systemctl suspend && $Locker # fn 
bindsym XF86Sleep exec --no-startup-id $Locker # fn 

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id  systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Delete mode "$mode_system"

exec --no-startup-id xautolock -time 10 -locker 'i3lock -d -c 000000'


